{% extends 'base.html.twig' %}

{% block title %}Events index{% endblock %}

{% block body %}
    <h1 class="text-center">Events in Vienna</h1>
    <div class="text-center mb-4">
        <form method="get" action="{{ path('app_events_index') }}">
            <select name="type" class="form-select" onchange="this.form.submit()">
                <option value="">All Types</option>
                <option value="Music" {% if eventType == 'Music' %}selected{% endif %}>Music</option>
                <option value="Sports" {% if eventType == 'Sports' %}selected{% endif %}>Sports</option>
                <option value="Movie" {% if eventType == 'Movie' %}selected{% endif %}>Movie</option>
                <option value="Theater" {% if eventType == 'Theater' %}selected{% endif %}>Theater</option>
                <option value="Food" {% if eventType == 'Food' %}selected{% endif %}>Food</option>
                <option value="Art" {% if eventType == 'Art' %}selected{% endif %}>Art</option>
                <option value="Other" {% if eventType == 'Other' %}selected{% endif %}>Other</option>
            </select>
        </form>
    </div>

    
   
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 row-cols-xl-4">
        {% for event in events %}
        <div class="mx-auto col mb-4" >
            <div class="cardColor card mx-auto" style="width: 18rem;">
                <img src='{{event.image}}' class="card-img-top" alt="{{ event.name }}">
                <div class="card-body">
                <h5 class="card-title">{{ event.name }}</h5>
                <p class="card-text">{{ event.eventDateTime ? event.eventDateTime|date('Y-m-d H:i:s') : '' }}</p>
                <p class="card-text">{{ event.adress }}</p>
                <a class="btn btn-success" href="{{ path('app_events_show', {'id': event.id}) }}">Details</a>
                <a class="btn btn-danger" href="{{ path('app_events_edit', {'id': event.id}) }}">Update</a>
                </div>
            </div>
        </div>
        {% else %}
        <h1> You don't have an record</h1>
      {% endfor %}
    </div>
    <h4 class="text-center">
    <a class="btn btn-outline-dark indexbtn " href="{{ path('app_events_new') }}">Create a new Event</a>
</h4>
    {% endblock %}

        
            
    


